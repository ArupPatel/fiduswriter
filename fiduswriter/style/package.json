{
    "scripts": {
        "get_citation_locale": "mkdir -p ../static-libs/js/modules/citations/ && echo -n 'export const enUSLocale = ' > ../static-libs/js/modules/citations/en_us_locale.js && wget -q -O - https://raw.githubusercontent.com/citation-style-language/locales/master/locales-en-US.xml | ../style/csl_xml_to_json.py >> ../static-libs/js/modules/citations/en_us_locale.js",
        "get_jats_csl": "mkdir -p ../static-libs/csl/ && wget https://raw.githubusercontent.com/jgm/pandoc/b6b8b8466074f3793f4cc622cf702c6acbf2055d/data/jats.csl -q -O - | ../style/csl_xml_to_json.py > ../static-libs/csl/jats.json",
        "postinstall": "npm run get_citation_locale && npm run get_jats_csl"
    }
}
